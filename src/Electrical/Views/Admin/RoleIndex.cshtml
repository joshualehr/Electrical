@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<br />
<div class="row">
    <div class="text-left col-xs-6">
        <a asp-action="UserIndex" class="btn btn-primary">
            <i class="glyphicon glyphicon-user" title="Users"></i>
            <span class="hidden-xs">Users</span>
        </a>
    </div>
    <div class="text-right col-xs-6">
        <a asp-action="CreateRole" class="btn btn-success">
            <i class="glyphicon glyphicon-plus" title="New"></i>
            <span class="hidden-xs">New Role</span>
        </a>
    </div>
</div>
<h2>Roles</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-xs-4 text-left">
                Role
            </th>
            <th class="col-xs-4 text-right">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-xs-4 text-left">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-xs-4 text-right">
                    <div class="btn-group">
                        <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger" data-post="Are you sure you want to delete the @item.Name role?">
                            <i class="glyphicon glyphicon-remove" title="Delete"></i>
                            <span class="hidden-xs">Delete</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/js/deleteconfirmation.js"></script>
}