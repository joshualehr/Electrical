@model Electrical.ViewModels.Admin.UserIndexViewModel

@{
    ViewData["Title"] = "Users";
}

<br />
<div class="row">
    <div class="text-left col-xs-6">
        <a asp-action="RoleIndex" class="btn btn-primary">
            <i class="glyphicon glyphicon-ok-circle" title="Roles"></i>
            <span class="hidden-xs">Roles</span>
        </a>
    </div>
    <div class="text-right col-xs-6">
        <a asp-controller="Account" asp-action="Register" class="btn btn-success">
            <i class="glyphicon glyphicon-plus" title="New"></i>
            <span class="hidden-xs">New User</span>
        </a>
    </div>
</div>
<h2>Users</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-xs-4 text-left">
                Name
            </th>
            <th class="col-xs-4 text-center">
                Roles
            </th>
            <th class="col-xs-4 text-right">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @Html.DisplayFor(model => model.Users)
    </tbody>
</table>

@section Scripts {
    <script src="~/js/deleteconfirmation.js"></script>
}