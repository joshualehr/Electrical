@model Electrical.ViewModels.Project.CreateViewModel

@{
    ViewData["Title"] = "New Project";
}

<h2>New Project</h2>
<div class="row">
    <form asp-action="Create" asp-antiforgery="true">
        <div class="form-horizontal col-xs-12 col-sm-9">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="Designation" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Designation" class="form-control" />
                    <span asp-validation-for="Designation" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="Description" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="JobCode" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="JobCode" class="form-control" />
                    <span asp-validation-for="JobCode" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="Address" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="City" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="State" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="PostalCode" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="hidden-xs hidden-sm">
                    <label asp-for="Users" class="col-md-2 control-label"></label>
                </div>
                <div class="col-md-10">
                    <select asp-for="ProjectManagerId" asp-items="Model.Users" class="form-control">
                        <option value="">Select One...</option>
                    </select>
                    <span asp-validation-for="Users" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 btn-group">
                    <a asp-action="Index" class="btn btn-primary">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-warning" />
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
